" IdeaVimrc generated from neovim configuration
" Basic vim settings that work in IdeaVim

" General settings
set clipboard+=unnamedplus
set colorcolumn=80
set cursorline
set ignorecase
set number
" Skip relativenumber as requested
set showmode
set smartcase
set virtualedit=all
set wrap

" Tab and indentation settings
set tabstop=2

" Search settings
set ignorecase
set smartcase

" UI settings  
set scrolloff=5

" Leader key
let mapleader=" "
map <Space> <Leader>

" Basic navigation keymaps
nnoremap <S-CR> -
nnoremap <C-f> 5<C-e>
nnoremap <C-b> 5<C-y>
vnoremap p "_dP

" Disable Q for Ex mode
nnoremap Q <Nop>
nnoremap <Space> <Nop>

" Copy path to clipboard
nnoremap <C-g> :let @+ = expand("%")<CR><C-g>

" IdeaVim specific settings and plugins
set ideajoin
set ideastatusicon=gray
set idearefactormode=keep

" Enable IdeaVim plugins
set surround
set commentary
set matchit
set highlightedyank

" IDE actions (replacing LSP mappings with IntelliJ actions)
map gD <Action>(GotoDeclaration)
map gd <Action>(GotoDeclaration)
map <C-]> <Action>(GotoDeclaration)
map <C-[> <Action>(FindUsages)
map grt <Action>(GotoTypeDeclaration)
map gri <Action>(GotoImplementation)
map grr <Action>(ShowUsages)
map grn <Action>(RenameElement)
map gO <Action>(FileStructurePopup)
map K <Action>(QuickJavaDoc)
map <C-=> <Action>(ReformatCode)

" Leader mappings for IDE features
map <Leader>d <Action>(ActivateProblemsViewToolWindow)
map <Leader>e <Action>(SelectInProjectView)
map <Leader>f <Action>(GotoFile)
map <Leader>/ <Action>(Find)
map <Leader>? <Action>(FindInPath)
map <Leader><Tab> <Action>(RecentFiles)
map <Leader>o <Action>(RecentFiles)
map <Leader><Space> <Action>(GotoAction)

" Window management
map <Leader>li <Action>(CallHierarchy)
map <Leader>lo <Action>(CallHierarchy)
map <Leader>ld <Action>(ShowErrorDescription)

" Version control (replacing signify mappings)
map <Leader>hd <Action>(Compare.SameVersion)
map <Leader>hu <Action>(ChangesView.Revert)

" Custom command for write
command W :write
